<div class="container">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="row">
    <div class="col-12">
      <div class="card mb-4 shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
          <h1 class="h3 mb-0">Team: <%= @team.name %></h1>
          <div class="d-flex gap-3">
            <%= link_to "Edit", edit_team_path(@team), class: "btn btn-sm btn-outline-light" %>
            <%= button_to "Delete", @team, method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Are you sure you want to delete this team?" } %>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <dl class="row">
                <dt class="col-sm-4">Coach:</dt>
                <dd class="col-sm-8">
                  <%= @team.coach.first_name %> <%= @team.coach.last_name %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-4 shadow-sm">
        <div class="card-header">
          <h2 class="h4 mb-0">Team Events</h2>
        </div>
        <div class="card-body">
          <% if @team.events.any? %>
            <div class="list-group">
              <% @team.events.each do |event| %>
                <div class="list-group-item list-group-item-action">
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"><%= event.name %></h5>
                    <small class="text-muted"><%= event.date.strftime("%B %d, %Y %I:%M %p") %></small>
                  </div>
                  <p class="mb-1"><%= event.location %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="alert alert-info" role="alert">
              No events scheduled for this team.
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "Back to Teams", teams_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>