<h1>Welcome, <%= @coach.first_name %>!</h1>

<h2>Teams<h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td>
          <%= link_to 'View', team_path(team), class: "btn btn-info btn-sm" %>
          <%= link_to 'Edit', edit_team_path(team), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Delete', team_path(team), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>