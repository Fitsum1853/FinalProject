<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<% @events.each do |event| %>
  <div class="event">
    <h2><%= event.name %></h2>
    <p><strong>Date:</strong> <%= event.date %></p>
    <p><strong>Location:</strong> <%= event.location %></p>
    <p><strong>Team:</strong> <%= event.team.name %></p>
    <%= link_to 'Back to Teams', teams_path, class: 'btn btn-primary' %>


    <% if coach_signed_in? %>
      <%= link_to 'Show this event', event_path(event) %> | 
      <%= link_to 'Edit', edit_event_path(event) %> | 
      <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>

<% if coach_signed_in? %>
  <%= link_to 'New Event', new_event_path %>
  <%= link_to 'Back to Teams', teams_path, class: 'btn btn-primary' %>
<% end %>