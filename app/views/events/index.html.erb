<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<% @events.each do |event| %>
  <div class="event">
    <h2><%= event.name %></h2>
    <p><strong>Date:</strong> <%= event.date %></p>
    <p><strong>Location:</strong> <%= event.location %></p>
    <p><strong>Team:</strong> <%= event.team.name %></p>

    <% if coach_signed_in? %>
      <!-- Links for logged-in coaches -->
      <%= link_to 'Show this event', team_event_path(event.team, event), class: 'btn btn-secondary' %>
      <%= link_to 'Edit', edit_team_event_path(event.team, event), class: 'btn btn-warning' %>
      <%= link_to 'Delete', team_event_path(event.team, event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <% end %>
  </div>
<% end %>

<!-- Links for logged-in coaches -->
<% if coach_signed_in? %>
  <%= link_to 'New Event', new_event_path, class: 'btn btn-success mt-3' %>
<% end %>

<!-- Back to Teams button -->
<%= link_to 'Back to Teams', teams_path, class: 'btn btn-primary mt-3' %>
